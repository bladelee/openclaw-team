# Test environment variables for OpenClaw Tenant Manager

NODE_ENV=test
PORT=3000
LOG_LEVEL=error

# Test database (use in-memory or test database)
DATABASE_URL=postgresql://openclaw:openclaw123@localhost:5432/openclaw_test
DATABASE_POOL_MIN=1
DATABASE_POOL_MAX=5

# Test Portainer configuration (use mock)
PORTAINER_URL=http://localhost:9000
PORTAINER_API_KEY=test-api-key-min-32-chars

# JWT secrets for testing
JWT_SECRET=test-jwt-secret-min-32-characters-for-testing
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=30d

# OAuth configuration (disabled for tests)
OAUTH_ENABLED=false

# Default tenant plan
DEFAULT_PLAN=basic

# Data directory for tests
DATA_DIR=/tmp/openclaw/test

# Container images for testing
GATEWAY_IMAGE=ghcr.io/moltbot/moltbot:latest
SANDBOX_IMAGE=ghcr.io/moltbot/moltbot:sandbox

# Resource quotas
QUOTA_FREE=0.5,512,5120,1
QUOTA_BASIC=1,1024,20480,3
QUOTA_PRO=2,2048,51200,10
QUOTA_ENTERPRISE=4,4096,204800,-1

# Metrics
METRICS_ENABLED=false
METRICS_PORT=9090

# Alerts (disabled for tests)
ALERT_ENABLED=false
ALERT_CPU_THRESHOLD=90
ALERT_MEMORY_THRESHOLD=90

# Shared secret for SSO integration
SHARED_SECRET_KEY=test-shared-secret-min-32-characters
SIGNATURE_TOLERANCE=300
