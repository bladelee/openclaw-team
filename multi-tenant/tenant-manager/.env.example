# 租户管理服务配置

# 服务配置
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# 数据库配置
DATABASE_URL=postgresql://openclaw:openclaw123@localhost:5432/openclaw
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Portainer 配置
PORTAINER_URL=http://localhost:9000
PORTAINER_API_KEY=your_portainer_api_key_here

# JWT 配置
JWT_SECRET=your_jwt_secret_change_this_in_production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=30d

# OAuth 配置（可选）
OAUTH_ENABLED=true
OAUTH_ISSUER=https://auth.openclaw.app
OAUTH_AUDIENCE=openclaw-api

# 租户配置
DEFAULT_PLAN=basic
DATA_DIR=/data/openclaw/tenants

# 镜像配置
GATEWAY_IMAGE=ghcr.io/moltbot/moltbot:latest
SANDBOX_IMAGE=ghcr.io/moltbot/moltbot:sandbox

# 资源配额（MB）
# 格式: plan:cpu,memory,storage,sandboxes
QUOTA_FREE=0.5,512,5120,1
QUOTA_BASIC=1,1024,20480,3
QUOTA_PRO=2,2048,51200,10
QUOTA_ENTERPRISE=4,4096,204800,-1

# 监控配置
METRICS_ENABLED=true
METRICS_PORT=9090

# 告警配置
ALERT_ENABLED=false
ALERT_WEBHOOK_URL=https://hooks.slack.com/xxx
ALERT_CPU_THRESHOLD=90
ALERT_MEMORY_THRESHOLD=90

# SSO 集成
SHARED_SECRET_KEY=your_shared_secret_for_sso_min_32_chars
SIGNATURE_TOLERANCE=300

# Casdoor SSO 配置
CASDOOR_ENABLED=true
CASDOOR_ENDPOINT=http://localhost:8000
CASDOOR_CLIENT_ID=your_client_id_from_casdoor
CASDOOR_CLIENT_SECRET=your_client_secret_from_casdoor
CASDOOR_ORGANIZATION=openclaw
CASDOOR_APPLICATION=app-openclaw
CASDOOR_REDIRECT_URI=http://localhost:3001/api/auth/casdoor/callback
FRONTEND_URL=http://localhost:3001

# 实例 URL 配置
INSTANCE_BASE_DOMAIN=openclaw.app
INSTANCE_URL_FORMAT={name}.{baseDomain}
INSTANCE_URL_SCHEME=https
